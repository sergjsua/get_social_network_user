  <div id="homepage" v-cloak>
    <div class="container">
      <br/>
      <h1 class="text-center">Profile</h1>
      <div class="login-form-container">
        <hr/>
        <form action="/api/get-user-info" method="POST">
          <div class="form-group">
            <select class="form-control" focus-first name="network">
              <option value="instagram" selected="selected">Instagram</option>
            </select>
          </div>
          <div class="form-group">
            <input type="text" class="form-control" placeholder="User Handler" name="handler" value="" required autocomplete="off"></input>
          </div>
          <div class="form-group">
            <ajax-button class="btn-dark btn-lg btn-block">Get Info</ajax-button>
          </div>
        </form>
      </div>
    </div>
    <% if(typeof user !== 'undefined') { %>
      <div class="container">
        <div><label>Name:</label><br><%= user.name %></div><br>
        <div><label>Description:</label><br><%= user.description %></div><br>
        <div><label>Followers:</label><br><%= user.followers_number %></div><br>
        <div><label>Followings:</label><br><%= user.following_number %></div>
      </div>
    <% } %>
    <% if(typeof error !== 'undefined') { %>
      <div class="container">
        <div style="text-align: center"><%= error %></div>
      </div>
    <% } %>
  </div>
<%- /* Expose locals as `window.SAILS_LOCALS` :: */ exposeLocalsToBrowser() %>
